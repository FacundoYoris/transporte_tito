<!-- MODAL EDITAR CONDUCTOR -->
<div class="modal fade" id="editarConductor<%= id %>" tabindex="-1" aria-labelledby="editarConductorLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content shadow-lg rounded-3">

      <!-- ENCABEZADO CON GRADIENTE VERDE -->
      <div class="modal-header text-white" style="background: linear-gradient(to right, #4fd1c5, #48bb78);">
        <h5 class="modal-title fw-bold" id="editarConductorLabel">
          <i class="bx bxs-user-detail me-2"></i> Editar Conductor
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>

      <!-- CUERPO -->
      <div class="modal-body bg-light">
        <form action="/updateConductor" method="POST" class="p-3">
          <input type="hidden" name="nrochof" value="<%= datos.nrochof %>">

          <!-- Campo: Nombre -->
          <div class="mb-3">
            <label class="form-label fw-semibold">Nombre del Conductor</label>
            <input type="text" class="form-control" name="nomchof" value="<%= datos.nomchof %>" required>
          </div>

          <!-- Campo: DNI -->
          <div class="mb-3">
            <label class="form-label fw-semibold">DNI</label>
            <input type="number" class="form-control" name="dnichof" value="<%= datos.dnichof %>" required>
          </div>

          <!-- Campo: Cami贸n asociado -->
          <div class="mb-3">
            <label class="form-label fw-semibold">Cami贸n Asociado</label>
            <select class="form-select" name="idcamion" required>
              <option value="" disabled>Seleccione un cami贸n</option>
              <% camiones.forEach(camion => { %>
                <option value="<%= camion.nummovil %>" <%= camion.nummovil == datos.idcamion ? 'selected' : '' %>>
                  <%= camion.patmovil %>
                </option>
              <% }); %>
            </select>
          </div>

          <!-- Bot贸n -->
          <div class="mt-4 d-flex justify-content-center">
            <button type="submit" class="btn btn-success fw-bold px-4">
              <i class="bx bx-save"></i> Guardar Cambios
            </button>
          </div>
        </form>
      </div>

      <!-- PIE DE MODAL -->
      <div class="modal-footer d-flex justify-content-between bg-light">
        <small class="text-muted">* Todos los campos son obligatorios.</small>
        <button type="button" class="btn btn-danger fw-bold" data-bs-dismiss="modal">
          <i class="bx bx-x-circle"></i> Cerrar
        </button>
      </div>

    </div>
  </div>
</div>
